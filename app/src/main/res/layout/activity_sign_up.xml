<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#313C52">

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User Registion"
                android:textColor="#f1f3f4"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textView2"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:hint="Owner Name"
                android:drawableLeft="@drawable/name"
                android:textColorHint="#0e0e0e"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:drawableLeft="@drawable/bname"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bname">

                </ImageView>

                <Spinner

                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:spinnerMode="dropdown"
                    android:hint="Business_Name"
                    android:textColorHint="#0e0e0e"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etBName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:hint="Business Name"
                android:drawableLeft="@drawable/bname"
                android:textColorHint="#0e0e0e"/>
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="Address"
                android:drawableLeft="@drawable/address"
                android:textColorHint="#0e0e0e"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:drawableLeft="@drawable/bname"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/address">

                </ImageView>



                <Spinner
                android:id="@+id/spinnercity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:spinnerMode="dropdown"
                    android:drawableLeft="@drawable/bname"
                    android:hint="Business_Name"
                    android:textColorHint="#0e0e0e"/>
            </LinearLayout>




            <EditText
                android:id="@+id/etContactNo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:maxLength="11"
                android:hint="Contact No"
                android:drawableLeft="@drawable/phone"
                android:textColorHint="#0e0e0e"
                android:inputType="phone" />


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:hint="Email"
                android:drawableLeft="@drawable/email"
                android:inputType="textEmailAddress"
                android:textColorHint="#0e0e0e"/>
            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/pass"
                android:textColorHint="#0e0e0e"
                android:password="true" />
            <EditText
                android:id="@+id/etComPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="Comfirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/pass"
                android:textColorHint="#0e0e0e"
                android:password="true" />
            <Button
                android:id="@+id/btnSingUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="4dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                style="@style/DefaultButtonText"
                android:background="@drawable/colorbutton"
                android:textColor="#0e0e0e"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>