<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#313C52">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:id="@+id/linearLayout5">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Update Profile"
                android:textSize="20dp"
                android:textColor="#f1f3f4"
                android:layout_marginTop="8dp"
                android:id="@+id/textView2"
                android:textAlignment="center" />


            <EditText
            android:id="@+id/uName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittextstyle"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:hint="Owner Name"
            android:drawableLeft="@drawable/name"
            android:textColorHint="#0e0e0e"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:drawableLeft="@drawable/bname"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bname">

                </ImageView>

                <Spinner

                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:hint="Business Name"
                    android:textColorHint="#0e0e0e"/>
            </LinearLayout>











            <EditText
                android:id="@+id/uBName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Business Name"
                android:drawableLeft="@drawable/bname"
                android:textColorHint="#0e0e0e"/>
            <EditText
            android:id="@+id/uAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittextstyle"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:hint="Address"
            android:drawableLeft="@drawable/address"
            android:textColorHint="#0e0e0e"/>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:drawableLeft="@drawable/bname"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/address">

                </ImageView>

                <Spinner

                    android:id="@+id/spinner4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:hint="Business Name"
                    android:textColorHint="#0e0e0e"/>
            </LinearLayout>




            <EditText
                android:id="@+id/uContactNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="Contact No"
                android:maxLength="11"
                android:drawableLeft="@drawable/phone"
                android:textColorHint="#0e0e0e"
                android:inputType="phone" />



        <EditText
            android:id="@+id/utPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/pass"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#0e0e0e"
            android:password="true" />
        <EditText
            android:id="@+id/utComPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/pass"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textColorHint="#0e0e0e"
            android:password="true" />
        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Update"
            android:textAllCaps="false"
            style="@style/DefaultButtonText"
            android:background="@drawable/colorbutton"
            android:textColor="#0e0e0e"
            />

    </LinearLayout>


</RelativeLayout>
</ScrollView>